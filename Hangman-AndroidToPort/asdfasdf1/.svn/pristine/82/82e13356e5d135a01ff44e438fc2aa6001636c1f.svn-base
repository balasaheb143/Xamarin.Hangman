<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fundora.hangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <meta-data
        android:name="com.google.android.gms.games.APP_ID"
        android:value="@string/app_id" />
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.fundora.hangman.activities.SplashActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.MainMenuActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.GameModesActivity"
            android:label="GameModes" >
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.AboutActivity"
            android:label="About Hangman" >
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.SwarmStats"
            android:label="Swarm" >
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.ScoreActivity"
            android:label="Score" >
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.SettingsActivity"
            android:label="About Settings" >
        </activity>
        <activity
            android:name="com.fundora.hangman.activities.GameActivity"
            android:label="Game"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>