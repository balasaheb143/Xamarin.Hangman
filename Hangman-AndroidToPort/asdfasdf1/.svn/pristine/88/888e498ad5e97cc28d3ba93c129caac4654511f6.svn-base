<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/game0" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="5dip"
        android:paddingTop="10pt" >

        <TextView
            android:id="@+id/hidden_txt"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

    <TextView
        android:id="@+id/entered_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="6pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mChronometer"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout1"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/text_red"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scor_txt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RelativeLayout1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/text_red"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hint_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mChronometer"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_toLeftOf="@+id/scor_txt"
        android:layout_toRightOf="@+id/mChronometer"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="6pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_newGame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/newbtn" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.fundora.hangman"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_newGame"
        android:layout_alignParentLeft="true"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center" >

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterQ"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/q2"
                app:letter="Q"
                app:unclickedImage="@drawable/q1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterW"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/w2"
                app:letter="W"
                app:unclickedImage="@drawable/w1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterE"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/e2"
                app:letter="E"
                app:unclickedImage="@drawable/e1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterR"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/r2"
                app:letter="R"
                app:unclickedImage="@drawable/r1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterT"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/t2"
                app:letter="T"
                app:unclickedImage="@drawable/t1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterY"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/y2"
                app:letter="Y"
                app:unclickedImage="@drawable/y1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterU"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/u2"
                app:letter="U"
                app:unclickedImage="@drawable/u1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterI"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/i2"
                app:letter="I"
                app:unclickedImage="@drawable/i1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterO"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/o2"
                app:letter="O"
                app:unclickedImage="@drawable/o1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterP"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/p2"
                app:letter="P"
                app:unclickedImage="@drawable/p1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center" >

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterA"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/a2"
                app:letter="A"
                app:unclickedImage="@drawable/a1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterS"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/s2"
                app:letter="S"
                app:unclickedImage="@drawable/s1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterD"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/d2"
                app:letter="D"
                app:unclickedImage="@drawable/d1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterF"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/f2"
                app:letter="F"
                app:unclickedImage="@drawable/f1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterG"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/g2"
                app:letter="G"
                app:unclickedImage="@drawable/g1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterH"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/h2"
                app:letter="H"
                app:unclickedImage="@drawable/h1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterJ"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:layout_column="1"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/j2"
                app:letter="J"
                app:unclickedImage="@drawable/j1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterK"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/k2"
                app:letter="K"
                app:unclickedImage="@drawable/k1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterL"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/l2"
                app:letter="l"
                app:unclickedImage="@drawable/l1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterZ"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/z2"
                app:letter="Z"
                app:unclickedImage="@drawable/z1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterX"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/x2"
                app:letter="X"
                app:unclickedImage="@drawable/x1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterC"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/c2"
                app:letter="C"
                app:unclickedImage="@drawable/c1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterV"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/v2"
                app:letter="V"
                app:unclickedImage="@drawable/v1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterB"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/b2"
                app:letter="B"
                app:unclickedImage="@drawable/b1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterN"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/n2"
                app:letter="N"
                app:unclickedImage="@drawable/n1" />

            <com.fundora.hangman.LetterButton
                android:id="@+id/letterM"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                app:clickedImage="@drawable/m2"
                app:letter="M"
                app:unclickedImage="@drawable/m1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>