<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hangman"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="30dip"
    android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:weightSum="1" >

        <Button
            android:id="@+id/new_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button"
            android:text="@string/new_game_btn"
            android:textColor="@color/black"
            android:textSize="14pt"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/new_button"
            android:layout_marginTop="5pt"
            android:background="@drawable/button"
            android:text="@string/continue_btn"
            android:textColor="@color/black"
            android:textSize="14pt"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/continue_button"
            android:layout_marginTop="5pt"
            android:background="@drawable/button"
            android:text="@string/about_btn"
            android:textColor="@color/black"
            android:textSize="14pt"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/about_button"
            android:layout_marginTop="5pt"
            android:background="@drawable/button"
            android:text="@string/exit_btn"
            android:textColor="@color/black"
            android:textSize="14pt"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

</RelativeLayout>