<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamemodes"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_classic"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Survival_Attack"
        android:layout_alignRight="@+id/Survival_Attack"
        android:layout_centerVertical="true"
        android:background="@drawable/button"
        android:text="@string/ACTIVITY_GAMEMODES_CLASSIC"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/Survival_Attack"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Time_Attack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="@string/ACTIVITY_GAMEMODES_SURVIVAL_ATTACK"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/Survival"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btn_classic"
        android:layout_alignRight="@+id/btn_classic"
        android:layout_below="@+id/btn_classic"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="@string/ACTIVITY_GAMEMODES_SURVIVAL"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/Time_Attack"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Survival_Attack"
        android:layout_alignRight="@+id/Survival_Attack"
        android:layout_below="@+id/Survival"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="@string/ACTIVITY_GAMEMODES_TIMEATTACK"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>